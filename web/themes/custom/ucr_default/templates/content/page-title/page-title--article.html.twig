{#
/**
 * @file
 * Theme override for page titles.
 *
 * Available variables:
 * - title_attributes: HTML attributes for the page title element.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title: The page title, for use in the actual content.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 */
#}
{{ title_prefix }}
{% if title %}
  <div class="ucr-articles--page--title">
    {% if articles.header_image is not empty %}
      <div class="ucr-articles--page--title--background">
        <div class="ucr-articles--page--title--image">{{ articles.header_image }}</div>
        {% if articles.header_video is not empty %}
        <div class="ucr-articles--page--title--video">
          {% if articles.header_video_youtube %}
            <iframe src="{{ articles.header_video }}" width="100%" height="100%" frameborder="0"></iframe>
          {% else %}
            <video class="header-video-player" autoplay="true" loop="true" muted="true">
              <source src="{{ articles.header_video }}" type="video/mp4" />
              <source src="{{ articles.header_video }}" type="video/webm" />
              <source src="{{ articles.header_video }}" type="video/ogg" />
            </video>
          {% endif %}
        </div>
        {% endif %}
      </div>
      <div class="ucr-articles--page--title--overlay">
        <h1>{{ title }}</h1>
        {% if articles.subtitle is not empty %}<span class="ucr-articles--page--title--subtitle">{{ articles.subtitle }}</span>{% endif %}
        {% if articles.author_name is not empty or articles.author_date is not empty %}
        <div class="ucr-articles--page--title--author-info">
          {% if articles.author_name is not empty %}<span class="author-name">By {{ articles.author_name }} | </span>{% endif %}{% if articles.author_date is not empty %}<span class="author-date">{{ articles.author_date }}</span>{% endif %}
        </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ucr-articles--page--title--simple">
        <h1>{{ title }}</h1>
        {% if articles.subtitle is not empty %}<span class="ucr-articles--page--title--subtitle">{{ articles.subtitle }}</span>{% endif %}
        {% if articles.author_name is not empty or articles.author_date is not empty %}
        <div class="ucr-articles--page--title--author-info">
          {% if articles.author_name is not empty %}<span class="author-name">By {{ articles.author_name }} | </span>{% endif %}{% if articles.author_date is not empty %}<span class="author-date">{{ articles.author_date }}</span>{% endif %}
        </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
{% endif %}
{{ title_suffix }}