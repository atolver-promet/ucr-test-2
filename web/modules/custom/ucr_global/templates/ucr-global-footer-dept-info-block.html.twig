        {% if second_email is not empty %}<br />{{ second_email_label }}: <a href="mailto:{{ second_email }}">{{ second_email }}</a> {% endif %}
        {% if third_email is not empty %}<br />{{ third_email_label }}: <a href="mailto:{{ third_email }}">{{ third_email }}</a> {% endif %}</p>

    {% endif %}
    </address>
    {% if (campus_map is not empty) and (show_campus_map != 0) %}
    <p>
        <a class="link-img link-img-location" href="{{ campus_map }}" target="_blank"> Find Us{% if show_campus_map == 2 %}<br /><br />
            <img src="/themes/custom/ucr_default/images/googlemap.png" alt="Campus map image">{% endif %}</a>
    </p>
    {% endif %}
