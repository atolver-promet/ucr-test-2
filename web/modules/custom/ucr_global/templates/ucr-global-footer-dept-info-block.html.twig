    {% set second_email_label = "alt email" %}
    {% set third_email_label = "tertiary email" %}
    {% set first_phone = "" %}
    {% set second_phone = "" %}
    {% set primary_phone_label = "tel" %}
    {% set second_phone_label = "alt tel" %}
    {% set fax_label = "fax" %}
    {% if primary_email is not empty %}
        {% set first_email = primary_email %}
        {% set second_email = alternate_email %}
        {% set third_email = tertiary_email %}
    {% elseif alternate_email is not empty %}
        {% set first_email = alternate_email %}
    {% endif %}

    {% if custom_primary_email_label is not empty %}
        {% set first_email_label = custom_primary_email_label %}
    {% endif %}

    {% if custom_alternate_email_label is not empty %}
        {% set second_email_label = custom_alternate_email_label %}
    {% endif %}

    {% if custom_tertiary_email_label is not empty %}
        {% set third_email_label = custom_tertiary_email_label %}
    {% endif %}


    {% if primary_phone is not empty %}
        {% set first_phone = primary_phone %}
        {% set second_phone = alternate_phone %}
    {% elseif alternate_phone is not empty %}
        {% set first_phone = alternate_phone %}
    {% endif %}

    {% if custom_primary_phone_label is not empty %}
        {% set primary_phone_label = custom_primary_phone_label %}
    {% endif %}

    {% if custom_alternate_phone_label is not empty %}
        {% set second_phone_label = custom_alternate_phone_label %}
    {% endif %}

